def string_operations():
    # Input strings
    str1 = input("Enter the first string: ")
    str2 = input("Enter the second string: ")

    # Concatenation
    concatenated_str = str1 + str2
    print("Concatenated string:", concatenated_str)

    # Reverse
    reversed_str = str1[::-1]
    print("Reversed first string:", reversed_str)

    # Slice
    start = int(input("Enter the start index for slicing: "))
    end = int(input("Enter the end index for slicing: "))
    sliced_str = str1[start:end]
    print("Sliced string from index", start, "to", end, ":", sliced_str)

    # Length
    length_str1 = len(str1)
    length_str2 = len(str2)
    print("Length of the first string:", length_str1)
    print("Length of the second string:", length_str2)

def main():
    string_operations()

if __name__ == "__main__":
    main()
