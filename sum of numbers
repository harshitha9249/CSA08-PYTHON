def sum_of_numbers():
    """
    Function to calculate the sum of numbers from 1 to 100 using a while loop.
    """
    total_sum = 0
    number = 1
    
    while number <= 100:
        total_sum += number
        number += 1
    
    return total_sum

def main():
    # Calculate the sum of numbers from 1 to 100
    result = sum_of_numbers()
    
    # Print the result
    print(f"The sum of numbers from 1 to 100 is: {result}")

if __name__ == "__main__":
    main()
