def is_substring(main_string, sub_string):
    """
    This function checks if sub_string is a substring of main_string.
    """
    if sub_string in main_string:
        return True
    else:
        return False

# Input main string and substring from the user
main_string = input("Enter the main string: ")
sub_string = input("Enter the sub string: ")

# Check if sub_string is a substring of main_string
if is_substring(main_string, sub_string):
    print(f"'{sub_string}' is a substring of '{main_string}'.")
else:
    print(f"'{sub_string}' is NOT a substring of '{main_string}'.")
