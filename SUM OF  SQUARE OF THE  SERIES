def sum_of_squares(n):
    # Initialize the sum to 0
    total_sum = 0
    
    # Loop through the series and calculate the sum of squares
    for i in range(1, n + 1):
        total_sum += i * i
    
    return total_sum

def main():
    # Get input from the user
    n = int(input("Enter a number: "))
    
    # Calculate the sum of squares
    result = sum_of_squares(n)
    
    # Print the result
    print(f"The sum of squares of the series from 1 to {n} is: {result}")

if __name__ == "__main__":
    main()
