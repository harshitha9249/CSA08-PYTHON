def convert_case(input_string):
    """
    Convert the input string to uppercase and lowercase and display both versions.
    
    Parameters:
    input_string (str): The string to be converted.

    Returns:
    None
    """
    # Convert the input string to uppercase
    uppercase_string = input_string.upper()
    
    # Convert the input string to lowercase
    lowercase_string = input_string.lower()
    
    # Display the original string
    print("Original String:", input_string)
    
    # Display the string in uppercase
    print("Uppercase String:", uppercase_string)
    
    # Display the string in lowercase
    print("Lowercase String:", lowercase_string)

def main():
    # Take input string from user
    user_input = input("Enter a string: ")
    
    # Call the function to convert and display the string in both cases
    convert_case(user_input)

if __name__ == "__main__":
    main()
